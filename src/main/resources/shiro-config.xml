<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean name="realm" class="com.sdhh.shiro.UserRealm"/>
    <bean name="cacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager"/>
    <bean name="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
    <!--<bean name="securityManager" class="org.apache.shiro.mgt.DefaultSecurityManager">-->
        <property name="realm" ref="realm"/>
        <property name="cacheManager" ref="cacheManager"/>
    </bean>

    <!--调用静态方法SecurityUtils.setSecurityManager()-->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager"/>
        <property name="arguments" ref="securityManager"/>
    </bean>

    <!--shiro生命周期-->
    <bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor" />

    <!--shiro web过滤器-->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="loginUrl" value="/login.jsp"/>
        <property name="filterChainDefinitions">
            <value>
                /logout.action = anon
                /ajax/** = anon
                /css/** = anon
                /easyui-1.7/** = anon
                /fonts/** = anon
                /img/** = anon
                /js/** = anon
                /ruoyi/** = anon
                /zl/** = anon
                /userLogin.action = anon

                /** user
            </value>
        </property>
    </bean>

</beans>